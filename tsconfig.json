{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "moduleResolution": "Node",
        "outDir": "build/",
        "baseUrl": "src/"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
}